@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RoyalLayout.cshtml";
}
<head>
    <link href="~/assets/profile/stylesheet.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<div class="container rounded bg-white mt-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" src="~/Images/user.png" width="90">
                <span class="font-weight-bold">Welcome</span><span class="text-black-50">@User.Identity!.Name</span>
               </div>
        </div>
        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex flex-row align-items-center back">
                        <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                        <h6 class="text-right">Profile</h6>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label type="text" class="form-control">@User.Identity!.Name</label></div>

                </div>
             @*   <div class="row mt-3">
                    <div class="col-md-6"><label type="text" class="form-control"></label></div>
                </div>*@
             
                <div class="mt-5 text-right">
                    <a asp-action="ChangePassword" asp-controller="Profile"><h6 class="text-right">Change Password</h6></a>

                    <a class="btn btn-primary profile-button" type="button" asp-action="LogOut" asp-controller="Account">Log out</a>
                    </div>
            </div>
        </div>
    </div>
</div>
